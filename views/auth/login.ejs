<!-- Include Defatul HTML Header -->
<%- include ../partials/header.ejs %>
<!-- Include Default Html Navigation Menu -->
<%- include ../partials/main_nav.ejs %>

<div class="container">
 <!--Message Area -->
    <%if(messages.length > 0) {%>
        <div class="alert alert-danger">
            <%= messages %>
        </div>
    <% } %>   
    <main class="jumbotron text-center">
        <h1 class="jumbotron-heading"><%= title %></h1>
    </main>
    <div class="row">
        <div class="offset-md-4 col-md-4">
            <form  method="POST" autocomplete="off">
                <fieldset class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control"
                    name="email" placeholder="Enter email"
                    id="email" required autofocus>
                </fieldset>
                <fieldset class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control"
                    name="password" placeholder="Enter password"
                    id="password" required>
                    or
                    <a href="/register">Register Here</a>
                </fieldset>
                <fieldset class="form-group text-right">
                    <input type="submit" class="btn btn-primary" value="Login">
                    <a href="/">
                        <input type="button" class="btn btn-warning" value="Cancel">
                    </a>
                </fieldset>
                <!--
                <div class="divider"></div>
                <fieldset class="form-group text-right">
                    <a href="/auth/google" class="btn btn-danger">
                    <i class="fab fa-google-plus-g left"></i> Log in with google
                    </a>
                </fieldset> 
                -->               
            </form>
        </div>
    </div>
</div>

<!-- Include Defatul HTML Bottom -->
<%- include ../partials/bottom_nav.ejs %>
<!-- Include Defatul Footer -->
<%- include ../partials/footer.ejs %>