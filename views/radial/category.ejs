<%- include ../partials/header.ejs %>
<!-- Include Default Html Navigation Menu -->
<%- include ../partials/main_nav.ejs %>
<script src="/scripts/app.js"></script>
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

