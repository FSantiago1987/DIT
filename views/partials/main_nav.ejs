<!-- set active item on navigation bar based on the current page -->
<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a  href="/home"><i class="fas fa-home"></i> Home</a>
    <a class="nav-link" href="/radial-list"><i class="far fa-circle"></i> Radial Menus </a>
    <a class="nav-link" href="/contact"><i class="fas fa-lg fa-mobile-alt"></i> Contact </a>
    <% if(typeof displayName == 'string' && displayName){ %>
        <a href="/logout"><i class="fas fa-lg fa-sign-out-alt"></i> Logout</a></li>
    <% } else { %>
        <a href="/login" class="nav-link"><i class="fas fa-lg fa-sign-in-alt"></i> Login</a></li>
    <% } %>
</div>

